<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Внешний белый контур -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80FFFFFF"/> <!-- Полупрозрачный белый цвет -->
            <corners android:radius="30dp"/> <!-- Радиус закругления -->
            <size android:width="30dp" android:height="30dp"/> <!-- Уменьшенный размер белого контура -->
        </shape>
    </item>

    <!-- Прозрачный слой с градиентом -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="315"
                android:startColor="#7495B5E6"
                android:endColor="#8DCCD6E7"
                android:type="linear"/>
            <corners android:radius="30dp"/> <!-- Радиус закругления -->
        </shape>
    </item>

    <!-- Средний слой с белым фоном -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#80FFFFFF"/> <!-- Полупрозрачный белый фон -->
            <corners android:radius="30dp"/> <!-- Радиус закругления -->
            <size android:width="30dp" android:height="30dp"/> <!-- Размер для эффекта контура -->
        </shape>
    </item>

    <!-- Внутренний слой с фоном -->
    <item android:top="6dp" android:left="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="315"
                android:startColor="#5282A9E4"
                android:endColor="#52ABC0E6"
                android:type="linear"/>
            <corners android:radius="30dp"/> <!-- Радиус закругления -->
        </shape>
    </item>

</layer-list>





