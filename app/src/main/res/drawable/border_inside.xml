<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Основной цвет элемента с эффектом стекла -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80A0C4E7" /> <!-- Полупрозрачный голубой цвет -->
            <corners android:radius="12dp" /> <!-- Закругление углов -->
        </shape>
    </item>

    <!-- Внутренний цвет (фон) -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#409DC3E7" /> <!-- Основной цвет элемента -->
            <corners android:radius="8dp" /> <!-- Закругление углов для фона -->
        </shape>
    </item>
</layer-list>