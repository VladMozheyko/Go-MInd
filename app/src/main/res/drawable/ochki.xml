<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Прозрачный слой -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#F87D40"
                android:endColor="#FCC493"
                android:type="linear"/>
            <corners android:radius="30dp"/> <!-- Радиус закругления -->
        </shape>
    </item>

    <!-- Средний слой с градиентом -->
    <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="5dp">
        <shape>
            <solid android:color="#FFFFFF"/> <!-- Цвет белого контура -->
            <corners android:radius="30dp"/> <!-- Радиус закругления -->

            <corners android:radius="30dp"/> <!-- Радиус закругления -->
            <size android:width="50dp" android:height="50dp"/> <!-- Размер для эффекта контура -->
        </shape>
    </item>

    <!-- Внутренний слой с фоном -->
    <item android:top="6dp" android:left="6dp" android:right="6dp" android:bottom="6dp">
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#F87D40"
                android:endColor="#FCC493"
                android:type="linear"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>

</layer-list>