<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/message"
        android:padding="30dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/byu_fruits"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:text="Удалить аккаунт"
            android:background="@drawable/auth_button"
            app:iconTintMode="multiply"
            app:backgroundTint="@null"
            android:fontFamily="@font/regular"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textFontWeight="900"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:text="Выйти из аккаунта"
            android:background="@drawable/reg_button"
            app:iconTintMode="multiply"
            app:backgroundTint="@null"
            android:fontFamily="@font/regular"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textFontWeight="900"/>

        <TextView
            android:id="@+id/support_text"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Служба поддержки"
            android:fontFamily="@font/regular"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#DC6A33"
            android:textAlignment="center"/>

    </LinearLayout>

    <!-- Круг с крестиком внизу страницы -->
    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/cross_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_background" />

        <ImageView
            android:id="@+id/cross_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cllose"
            android:layout_gravity="center"/>
    </FrameLayout>

</RelativeLayout>
