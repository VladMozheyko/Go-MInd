<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/autentication_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/edt_nickname"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/edit_text"
            android:hint="Введите никнейм"
            android:textColor="@color/main_blue"
            android:fontFamily="@font/regular"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColorHint="#8C1E3761"
            android:padding="15dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/nickname_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/edit_text"
            android:hint="Введите E-mail"
            android:fontFamily="@font/regular"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/main_blue"
            android:textColorHint="#8C1E3761"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/email_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="10dp" />

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp">

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/edit_text"
                android:hint="Придумайте пароль"
                android:fontFamily="@font/regular"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/main_blue"
                android:textColorHint="#8C1E3761"
                android:padding="15dp"
                />

            <ImageView
                android:id="@+id/password_toggle_eye"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:src="@drawable/eye3"
                android:visibility="visible"
                android:contentDescription="Hide password" />

            <ImageView
                android:id="@+id/password_toggle_eye_open"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:src="@drawable/eye4"
                android:visibility="gone"
                android:contentDescription="Show password" />
        </RelativeLayout>

        <TextView
            android:id="@+id/password_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="10dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/register_btn"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Зарегистрироваться"
            android:background="@drawable/reg_button"
            app:iconTintMode="multiply"
            app:backgroundTint="@null"
            android:fontFamily="@font/regular"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/support_text"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Служба поддержки"
            android:textStyle="bold"
            android:textColor="#DC6A33"
            android:fontFamily="@font/regular"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>