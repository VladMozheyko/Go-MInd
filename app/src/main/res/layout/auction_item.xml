<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_data1"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/header"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/img_clock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock" />

        <TextView
            android:id="@+id/txt_timeAuction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/regular"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/line"
            android:layout_width="40dp"
            android:layout_height="1.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn2"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Position"
            android:background="@drawable/click2"
            app:iconTintMode="multiply"
            app:backgroundTint="@null"
            android:fontFamily="@font/regular"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAlignment="center" />

        <View
            android:id="@+id/line3"
            android:layout_width="40dp"
            android:layout_height="1.5dp"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img5" />

        <TextView
            android:id="@+id/txt_peaches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@id/img5"
            android:layout_marginLeft="5dp"
            android:text="Cost"
            android:fontFamily="@font/regular"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/img6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/txt_peaches"
            android:src="@drawable/grusha" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_add"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_data1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_add" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/name_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/img_add"
        android:text="Nickname"
        android:background="@drawable/rounded_button_white"
        android:textColor="@color/main_blue"
        app:iconTintMode="multiply"
        app:backgroundTint="@null"
        android:fontFamily="@font/regular"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center" />

    <View
        android:id="@+id/line6"
        android:layout_width="380dp"
        android:layout_height="1.5dp"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:background="#000000" />


</LinearLayout>